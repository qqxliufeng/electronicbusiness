<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="版本更新"
            android:textColor="#363636"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/mVersionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="版本更新"
            android:textColor="#909090"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mCacheSizeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/selector_press_bg"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="清除缓存"
            android:textColor="#363636"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/mCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="20.0M"
            android:textColor="#909090"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mTvSettingAddressManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/selector_press_bg"
        android:drawableRight="@drawable/icon_inter"
        android:padding="@dimen/dp_10"
        android:text="收货地址管理"
        android:textColor="@color/black_tv_color" />

</LinearLayout>