<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/mTvIndexAskInfoLargeImageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有人说床头不能朝西，有科学根据吗？"
        android:textColor="@color/black_tv_color"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/mIvIndexAskInfoLargeImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/img_icon_test_pic_05" />

    <TextView
        android:id="@+id/mTvIndexAskInfoLargeImageAskCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2510回答"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_14" />
</LinearLayout>