<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorPrimary"
        android:paddingTop="25dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvSearchQuestionBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:src="@drawable/back" />

            <EditText
                android:id="@+id/mEtSearchQuestionContent"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg3"
                android:hint="请输入要搜索的问题关键字"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black_tv_color"
                android:textColorHint="#747474"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/mTvSearchQuestionCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp_10"
                android:enabled="false"
                android:text="取消"
                android:textColor="@color/select_tv_color2"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <include layout="@layout/fragment_base_recycler_view_layout" />

</LinearLayout>