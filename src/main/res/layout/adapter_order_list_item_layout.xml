<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_icon_group"
            android:drawablePadding="@dimen/dp_10"
            android:text="拇指斗价团体砍"
            android:textColor="@color/black_tv_color" />

        <TextView
            android:id="@+id/mTvShoppingCarItemEditMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/red_tv_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/mIvOrderListItemPic"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:id="@+id/mTvOrderListItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/black_tv_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/mTvOrderListItemSpecification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#949494"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:id="@+id/mTvOrderListItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#E10F0F"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mIvOrderListItemNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mTvOrderListItemPrice"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mTvOrderListItemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="right"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_tv_color"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <Button
            android:id="@+id/mBtOrderListItemExpress"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_tv_order_list_bg"
            android:text="查看物流" />

        <Button
            android:id="@+id/mBtOrderListItemComment"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_tv_shopping_car_delete_bg"
            android:text="评价"
            android:textColor="@color/red_tv_color" />

    </LinearLayout>


</LinearLayout>