<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/mIvReplyInfoItemFace"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvReplyInfoItemNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/mTvReplyInfoItemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_tv_color"
            android:textSize="@dimen/sp_14" />

        <!--<TextView
            android:id="@+id/mTvReplyInfoItemExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="展开"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTvReplyInfoItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/mTvReplyInfoItemReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mTvReplyInfoItemTime"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp"
                android:text="回复"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/mTvReplyInfoItemDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp"
                android:text="删除"
                android:textColor="@color/black_tv_color"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>