<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="问题：身材有黄金比例，婚姻也一样，身高？"
        android:textColor="@color/black_tv_color"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/mTvAnswerListItemAnswerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答：0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/mTvAnswerListItemAnswerCount"
            android:text="关注：1"
            android:textColor="#a5a5a5"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>
</LinearLayout>