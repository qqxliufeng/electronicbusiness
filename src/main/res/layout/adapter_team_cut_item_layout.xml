<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvPersonalCutItemPic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/mIvPersonalCutItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_tv_color"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/mTvPersonalCutItemMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/red_tv_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/mTvPersonalCutItemHasCut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/mTvPersonalCutItemMoney"
            android:textColor="#949494"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/mTvPersonalCutItemHasPersonNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/mTvPersonalCutItemHasCut"
            android:textColor="#949494"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/mBtPersonalCutItemCut"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bt_bg6"
            android:text="砍价购买"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>