<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="分享到"
        android:textColor="@color/black_tv_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/mTvShareWX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/img_icon_share_wx"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="微信" />

        <TextView
            android:id="@+id/mTvShareQQ"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/img_icon_share_qq"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/mTvShareWB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/img_icon_share_weibo"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="微博" />

        <TextView
            android:id="@+id/mTvShareCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/img_icon_share_circle"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="朋友圈" />
    </LinearLayout>

    <TextView
        android:id="@+id/mTvShareClose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_tv_color"
        android:textSize="@dimen/sp_16" />


</LinearLayout>