<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mTvPersonalInfoResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selector_press_bg"
            android:drawableRight="@drawable/icon_inter"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="20dp"
            android:textColor="#343434"
            android:textSize="14sp" />
        <RelativeLayout
            android:id="@+id/mRlVersionUpContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selector_press_bg"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="版本更新"
                android:textColor="#363636"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/mVersionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="版本更新"
                android:textColor="#909090"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mTvNewVersionNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/mVersionName"
                android:background="@drawable/shape_tv_bg11"
                android:textColor="#fff"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:text="new" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mCacheSizeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selector_press_bg"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="清除缓存"
                android:textColor="#363636"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/mCacheSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="20.0M"
                android:textColor="#909090"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mBtLogout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_shape_bt_bg1"
        android:text="退出登录"
        android:textColor="#fff"
        android:textSize="16sp" />
</RelativeLayout>
