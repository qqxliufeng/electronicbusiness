<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/mTvOrderInfoTopState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#58B6FF"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/dp_10"
            android:text="待发货"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_icon_address" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10">

                <TextView
                    android:id="@+id/mTvOrderInfoDetailPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_tv_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailPersonPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_tv_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailPersonDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mTvOrderInfoDetailPersonName"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_tv_color"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/mTvOrderInfoDetailKtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/black_tv_color" />

            <TextView
                android:id="@+id/mTvShoppingCarItemEditMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/red_tv_color" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mLlOrderInfoDetailGoodsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/mIvOrderInfoDetailGoodsPic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/mTvOrderInfoDetailGoodsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/black_tv_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailGoodsSpecification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#949494"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/mTvOrderInfoDetailGoodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#E10F0F"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailGoodsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/mTvOrderInfoDetailGoodsPrice"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <Button
                android:id="@+id/mBtOrderInfoAction1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_tv_order_list_bg"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/mBtOrderInfoAction2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_tv_shopping_car_delete_bg"
                android:textColor="@color/red_tv_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品总价"
                    android:textColor="#969696"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailGoodsAllPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#969696"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费（快递）"
                    android:textColor="#969696"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailGoodsExpressPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#969696"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品总价"
                    android:textColor="@color/black_tv_color"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/mTvOrderInfoDetailOrderAllPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_tv_color"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/mTvOrderInfoDetailOrderSN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_tv_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/mTvOrderInfoDetailOrderCopySN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_tv_shopping_car_change_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="2dp"
                android:text="复制"
                android:textColor="@color/black_tv_color"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mTvOrderInfoDetailOrderCTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black_tv_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvOrderInfoDetailOrderFTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black_tv_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvOrderInfoDetailOrderHTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black_tv_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mTvOrderInfoDetailOrderFinTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black_tv_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>